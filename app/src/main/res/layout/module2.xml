<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/nommodule"
        android:layout_width="196dp"
        android:layout_height="70dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="1080dp"
        android:text="Module n°2"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="612dp"
        android:layout_height="623dp"
        android:layout_marginStart="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.803"
        app:srcCompat="@drawable/question_m2" />


    <EditText
        android:id="@+id/reponse"
        android:layout_width="438dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="528dp"
        android:backgroundTint="#2073AA"
        android:ems="10"
        android:hint="Votre réponse"
        android:inputType="textPersonName"
        android:textColorHighlight="#1C6A9B"
        android:textColorLink="#2073AA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/auteur"
        android:layout_width="569dp"
        android:layout_height="145dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="948dp"
        android:fontFamily="@font/astonished"
        android:text="AUTEUR"
        android:textColor="#69FF00"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="571dp"
        android:layout_height="200dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="728dp"
        android:fontFamily="@font/astonished"
        android:text="Titre"
        android:textColor="#69FF00"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="193dp"
        android:layout_height="94dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="1168dp"
        android:fontFamily="@font/shlop"
        android:text="TextView"
        android:textColor="#5C297D"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/valider"
        android:layout_width="170dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="520dp"
        android:layout_marginBottom="40dp"
        android:background="#5C297D"
        android:fontFamily="@font/shlop"
        android:shadowColor="#000000"
        android:text="Valider"
        android:textColor="#25FF00"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/retour"
        android:layout_width="170dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="40dp"
        android:background="#5C297D"
        android:fontFamily="@font/shlop"
        android:shadowColor="#000000"
        android:text="Retour"
        android:textColor="#25FF00"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>